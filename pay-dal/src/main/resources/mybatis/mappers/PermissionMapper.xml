<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.andy.pay.mapper.PermissionMapper">
    <resultMap id="UserInfoResult" type="Permission">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="permission_name" column="permission_name" jdbcType="VARCHAR"/>
        <result property="permission_description" column="permission_description" jdbcType="VARCHAR"/>
        <result property="create_time" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="create_user" column="create_user" jdbcType="VARCHAR"/>
        <result property="lastmodify_time" column="lastmodify_time" jdbcType="TIMESTAMP"/>
        <result property="lastmodify_user" column="lastmodify_user" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="is_use" column="is_use" jdbcType="INTEGER"/>
    </resultMap>
    <insert id="addPermission" parameterType="Permission">
      insert into tbl_permission(id,permission_name,permission_description,create_time,create_user,status)values
      (#{id},#{permission_name},#{permission_description},#{create_time},#{create_user},#{status});
    </insert>
    <update id="modifyPermission" parameterType="Permission">
      update  tbl_permission set permission_name=#{permission_name},permission_description=#{permission_description},lastmodify_time=#{lastmodify_time},lastmodify_user=#{lastmodify_user},status=#{status} where id = #{id};
    </update>
    <update id="deletePermission" parameterType="Permission">
      update tbl_permission set is_use = 0 where id =#{id};
    </update>
</mapper>

